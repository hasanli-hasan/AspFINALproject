@model UserVM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminP/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>

                            <th>
                                Email
                            </th>

                            <th>
                                UserName
                            </th>

                        </tr>
                    </thead>
                    <tbody>
                            <tr>

                                <td>
                                    @Model.Email
                                </td>

                                <td>
                                    @Model.UserName
                                </td>
                            </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<form method="post">

    @foreach (string item in Model.Roles)
    {
        @if (item == Model.Role)
        {
            <input type="radio" name="Role" checked  value="@item"/> @item
        }
        else
        {
            <input type="radio" name="Role"  value="@item"/>@item
        }

    }

    <button type="submit" class="btn btn-dark">Change Role</button>

</form>
