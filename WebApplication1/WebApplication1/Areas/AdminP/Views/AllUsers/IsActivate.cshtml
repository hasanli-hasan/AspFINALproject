
@model AppUser

@{
    ViewData["Title"] = "IsActivate";
    Layout = "~/Areas/AdminP/Views/Shared/_AdminLayout.cshtml";
}

    <div class="row ">
        FullName:<h4> @Model.FullName</h4>
    </div>

    <div class="row">
        UserName: <h5> @Model.UserName</h5>
    </div>

    <div class="row">
        User Email: <p> @Model.Email</p>
    </div>
    <form method="post">
        @if (Model.IsActivated == true)
        {
            <input type="hidden" name="IsActivated" value="false" />
            <button type="submit" class="btn btn-danger">Blocked</button>
        }
        else
        {   <input type="hidden" name="IsActivated" value="true" />
            <button type="submit" class="btn btn-success">Activated</button>
        }
    </form>
