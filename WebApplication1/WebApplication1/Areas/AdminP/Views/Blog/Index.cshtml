@model IEnumerable<Blog>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminP/Views/Shared/_AdminLayout.cshtml";
}

<a asp-action="Create" class="btn btn-success m-2">Create Blog</a>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>

                            <th>
                                Blog Image
                            </th>

                            <th>
                                Blog Title
                            </th>

                       
                            <th>
                                Blog Category
                            </th>

                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Blog blog in Model)
                        {
                        <tr>

                            <td>
                                <img style="width:180px; height:100px; border-radius:0px;" src="~/img/@blog.Image" alt="Alternate Text" />
                            </td>

                         
                            <td>
                                @blog.Title
                            </td>

                        

                            <td>
                                @blog.BlogCategory.Name
                            </td>

                            <td>
                                <a asp-action="Detail" asp-route-id="@blog.Id" class="btn btn-success">Detail</a>
                                <a asp-action="Update" asp-route-id="@blog.Id" class="btn btn-warning">Update</a>
                                <a asp-action="Delete" asp-route-id="@blog.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

