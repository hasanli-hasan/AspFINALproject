@model IEnumerable<BlogCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminP/Views/Shared/_AdminLayout.cshtml";
}

<a asp-action="Create" class="btn btn-success m-2">Create</a>

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>

                            <th>
                                Category Name
                            </th>

                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (BlogCategory category in Model)
                        {
                            <tr>

                                <td>
                                    @category.Name
                                </td>

                                <td>
                                    <a asp-action="Detail" asp-route-id="@category.Id" class="btn btn-success">Detail</a>
                                    <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning">Update</a>
                                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

