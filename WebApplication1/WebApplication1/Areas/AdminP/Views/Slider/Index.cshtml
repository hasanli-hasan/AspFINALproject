@model IEnumerable<BookSlider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminP/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count() < 5)
{
    <a asp-action="Create" class="btn btn-success m-2">Create Slider</a>
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="table-responsive pt-3">
                <table class="table table-dark">
                    <thead>
                        <tr>

                            <th>
                                Slider Image
                            </th>

                            <th>
                                Settings
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var slider in Model)
                        {
                            <tr>

                                <td>
                                    <img src="~/img/@slider.Image" style="width:200px; height:80px; border-radius:0px; object-fit:cover" />
                                </td>

                                <td>
                                    <a asp-action="Detail" asp-route-id="@slider.Id" class="btn btn-success">Detail</a>
                                    <a asp-action="Update" asp-route-id="@slider.Id" class="btn btn-warning">Update</a>
                                    <a asp-action="Delete" asp-route-id="@slider.Id" class="btn btn-danger">Delete</a>
                                </td>
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

