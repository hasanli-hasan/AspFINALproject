@model RegisterVM



<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Majestic Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" src="~/admin/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" src="~/admin/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" src="~/admin/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" src="~/admin/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <form class="pt-3" method="post">

                                <div class="form-group">
                                    <input asp-for="FullName" class="form-control form-control-lg" placeholder="FullName">
                                </div>
                                <span class="text-danger" asp-validation-for="FullName"></span>

                                <div class="form-group">
                                    <input asp-for="UserName" class="form-control form-control-lg" placeholder="UserName">
                                </div>
                                <span class="text-danger" asp-validation-for="FullName"></span>

                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-lg" placeholder="Email">
                                </div>
                                <span class="text-danger" asp-validation-for="Email"></span>

                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-lg" placeholder="Password">
                                </div>
                                <span class="text-danger" asp-validation-for="Password"></span>

                                <div class="form-group">
                                    <input asp-for="CheckPassword" class="form-control form-control-lg" placeholder="Repeat Password">
                                </div>
                                <span class="text-danger" asp-validation-for="CheckPassword"></span>

                                <button type="submit" class="btn btn-success m-2 btn-block">Register</button>

                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a asp-controller="Account" asp-action="Login" class="text-primary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/admin/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/admin/js/off-canvas.js"></script>
    <script src="~/admin/js/hoverable-collapse.js"></script>
    <script src="~/admin/js/template.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    <!-- endinject -->
</body>

</html>
