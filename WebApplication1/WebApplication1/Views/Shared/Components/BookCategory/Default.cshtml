@model IEnumerable<BookCategory>


@foreach (var ctgry in Model)
{
    @if (ctgry.Books == null)
    {
        <p><a asp-controller="Book" asp-action="CategoryBook" asp-route-id="@ctgry.Id">@ctgry.CategoryName (0)</a></p>
    }
    else
    {
        <p><a asp-controller="Book" asp-action="CategoryBook" asp-route-id="@ctgry.Id">@ctgry.CategoryName (@ctgry.Books.Count)</a></p>
    }
}